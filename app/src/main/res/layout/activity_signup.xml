<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".vr.SignupActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:minHeight="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleTextColor="@android:color/white"
        android:background="?attr/colorPrimary">
    </android.support.v7.widget.Toolbar>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/linearLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:text="Login"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"
        android:textColor="@color/colorPrimaryDark" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

            <EditText
                android:id="@+id/input_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="100dp"
                android:drawableRight="@drawable/ic_person_black_24dp"
                android:hint="FULL NAME"
                android:inputType="textPersonName"
                android:layout_marginStart="33dp"
                android:layout_marginLeft="33dp"
                android:layout_marginEnd="33dp"
                android:layout_marginRight="33dp"
                android:padding="10dp"
                android:textColor="#000"
                android:textColorHint="#A4A4A4" />

            <EditText
                android:id="@+id/input_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:drawableRight="@drawable/ic_mail_black_24dp"
                android:hint="EMAIL"
                android:inputType="textEmailAddress"
                android:layout_marginStart="33dp"
                android:layout_marginLeft="33dp"
                android:layout_marginEnd="33dp"
                android:layout_marginRight="33dp"
                android:padding="10dp"
                android:textColor="#000"
                android:textColorHint="#A4A4A4" />

            <EditText
                android:id="@+id/input_pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:drawableRight="@drawable/ic_lock_black_24dp"
                android:hint="PASSWORD"
                android:layout_marginStart="33dp"
                android:layout_marginLeft="33dp"
                android:layout_marginEnd="33dp"
                android:layout_marginRight="33dp"
                android:inputType="textPassword"
                android:padding="10dp"
                android:textColor="#000"
                android:textColorHint="#A4A4A4" />

            <EditText
                android:id="@+id/input_contact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:drawableRight="@drawable/ic_phone_android_black_24dp"
                android:hint="PHONE NUMBER"
                android:inputType="phone"
                android:layout_marginStart="33dp"
                android:layout_marginLeft="33dp"
                android:layout_marginEnd="33dp"
                android:layout_marginRight="33dp"
                android:padding="10dp"
                android:textColor="#000"
                android:textColorHint="#A4A4A4" />
            <EditText
                android:id="@+id/input_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="33dp"
                android:layout_marginLeft="33dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="33dp"
                android:layout_marginRight="33dp"
                android:drawableRight="@drawable/ic_location_on_red_24dp"
                android:hint="Address"
                android:inputType="phone"
                android:padding="10dp"
                android:textColor="#000"
                android:textColorHint="#A4A4A4" />
            <EditText
                android:id="@+id/input_dob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:drawableRight="@drawable/ic_icons8_calendar"
                android:hint="DATE OF BIRTH (YYYY-MM-DD)"
                android:inputType="date"
                android:layout_marginStart="33dp"
                android:layout_marginLeft="33dp"
                android:layout_marginEnd="33dp"
                android:layout_marginRight="33dp"
                android:padding="10dp"
                android:textColor="#000"
                android:textColorHint="#A4A4A4" />

            <Button
                android:id="@+id/buttonSignUp"
                android:textColor="#fff"
                android:background="@drawable/mybuttons"
                android:text="SIGN UP"
                android:onClick="userSignup"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:textSize="20sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:text="@string/already_have_an_account"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="15sp" />

            <Button
                android:id="@+id/loginTransition"
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:background="@drawable/mybuttons"
                android:text="@string/login_here"
                android:onClick="loginTransition"
                android:textColor="#fff"
                android:textSize="20sp" />


        </LinearLayout>

</RelativeLayout>